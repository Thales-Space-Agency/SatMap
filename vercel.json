{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/node"
      },
      {
        "src": "dist/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "server.js"
      },
      {
        "src": "/(.*)",
        "dest": "/dist/$1",
        "continue": true
      }
    ],
    "env": {
      "NODE_ENV": "production"
    },
    "functions": { "api": { "handler": "server.js" } },
    "start": "node server.js"
  }
  